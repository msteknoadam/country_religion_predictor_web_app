{
	"scripts": {
		"install": "npm i node-pre-gyp -g && npm rebuild @tensorflow/tfjs-node --build-from-source && cd client && yarn",
		"dev:backend": "nodemon --ignore client/ --exec node_modules/.bin/ts-node -- ./backend/server.ts",
		"dev:frontend": "webpack --config ./webpack.frontend.config.dev.js --watch",
		"start:backend": "node_modules/.bin/ts-node -- ./backend/server.ts",
		"start:frontend": "webpack --config ./webpack.frontend.config.prod.js",
		"start": "yarn start:frontend && yarn start:backend"
	},
	"dependencies": {
		"@tensorflow/tfjs-node": "^2.6.0",
		"@types/express": "^4.17.2",
		"@types/socket.io": "^2.1.4",
		"express": "^4.17.1",
		"socket.io": "^2.3.0",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.4",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10"
	},
	"devDependencies": {
		"nodemon": "^2.0.2",
		"typescript": "^3.7.4"
	}
}
